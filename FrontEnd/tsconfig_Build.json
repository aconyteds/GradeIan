{
    "compilerOptions": {
        "module": "umd",
        "moduleResolution":"node",
        "target":"es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir":"./build/js",
        "experimentalDecorators":true,
        "allowSyntheticDefaultImports": true,
        "baseUrl":".",
        "paths":{
          "@angular":["node_modules/@angular"],
          "@jquery":["node_modules/jquery/dist/jquery.min.js"]
        },
        "types":[
          "node",
          "jquery",
          "core-js"
        ],
        "typeRoots":[
          "node_modules/@types"
        ]
    },
    "compileOnSave":false,
    "include": [
        "./src/**/*"
    ],
    "exclude":[
      "node_modules",
      "vendor"
    ]
}
